<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- %caller{1} prints the immediate caller's info (class, method, file, and line) -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg %caller{1}%n</pattern>
        </encoder>
    </appender>

    <!-- Set your logging level here. -->
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
